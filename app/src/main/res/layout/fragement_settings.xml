<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:padding="40dp"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Image Size"
        android:id="@+id/tvSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnerSize"
        android:entries="@array/size_array"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tvSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Image Color"
        android:id="@+id/tvColor"
        android:layout_below="@+id/spnerSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
   />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnerColor"
        android:entries="@array/color_array"
        android:layout_below="@+id/spnerSize"
        android:layout_alignLeft="@+id/spnerSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Image Type"
        android:id="@+id/tvImgType"
        android:layout_below="@+id/spnerColor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnerType"
        android:entries="@array/type_array"
        android:layout_below="@+id/spnerColor"
        android:layout_alignLeft="@+id/spnerSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Site Filter"
        android:id="@+id/tvSite"
        android:layout_below="@+id/spnerType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etSite"
        android:layout_below="@+id/spnerType"
        android:layout_alignLeft="@+id/spnerType"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Input the site here" />


</RelativeLayout>